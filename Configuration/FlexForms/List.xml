<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Instagram config</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.mediaTypes>
                        <TCEforms>
                            <label>Arten von Posts die angezeigt werden sollen</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Image</numIndex>
                                        <numIndex index="1">IMAGE</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Video</numIndex>
                                        <numIndex index="1">VIDEO</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Carousel</numIndex>
                                        <numIndex index="1">CAROUSEL_ALBUM</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.mediaTypes>

                    <settings.maxPostsToShow>
                        <TCEforms>
                            <label>Wieviele Bilder sollen maximal angezeigt werden?</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <eval>int</eval>
                            </config>
                        </TCEforms>
                    </settings.maxPostsToShow>

                    <settings.hashtagConstraints>
                        <TCEforms>
                            <label>Nur Posts mit diesen Hashtags anzeigen (mit #, komma-separiert):</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>255</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.hashtagConstraints>

                    <settings.logicalConstraint>
                        <TCEforms>
                            <label>Hashtags constraint</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Logical Or</numIndex>
                                        <numIndex index="1">logicalOr</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Logical And</numIndex>
                                        <numIndex index="1">logicalAnd</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.logicalConstraint>
                </el>
            </ROOT>
        </sDEF>
    </sheets>

</T3DataStructure>
